%section.chapter__card__contents
  %h2.chapter__card__head
    クレジットカード情報入力
  = form_tag(pay_card_index_path, method: :post, id: 'card_token',  name: "inputForm") do
    .address__main
      %label.card-registration-box__form__content__group__label 
      %label.address__main__label カード番号
      %span.address__main__require 必須
      = text_field_tag "card_number", "", class: "address__main__input", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
      %ul.signup-card-list
        %li.signup-card-item
          = image_tag "/visa.svg", class: "signup-card-item__visa", width: "49px", height: "20px"
        %li.signup-card-item
          = image_tag "/master-card.svg", class: "signup-card-item__master", width: "34px", height: "20px"
        %li.signup-card-item
          = image_tag "/saison-card.svg", class: "signup-card-item__saison", width: "30px", height: "20px"
        %li.signup-card-item
          = image_tag "/jcb.svg", class: "signup-card-item__jcb", width: "32px", height: "20px"
        %li.signup-card-item
          = image_tag "/american_express.svg", class: "signup-card-item__amex", width: "21px", height: "20px"
        %li.signup-card-item
          = image_tag "/dinersclub.svg", class: "signup-card-item__dinersclub", width: "32px", height: "20px"
        %li.signup-card-item
          = image_tag "/discover.svg", class: "signup-card-item__discover", width: "32px", height: "20px"
      #card_number_error
    .address__main
      = label "name", "有効期限", class: "address__main__label"
      %span.address__main__require 必須
      .address__main__card
        %select.input-default#exp_month{name: "exp_month", type: "text"}
          %option{value: ""} --
          %option{value: "1"}01
          %option{value: "2"}02
          %option{value: "3"}03
          %option{value: "4"}04
          %option{value: "5"}05
          %option{value: "6"}06
          %option{value: "7"}07
          %option{value: "8"}08
          %option{value: "9"}09
          %option{value: "10"}10
          %option{value: "11"}11
          %option{value: "12"}12
        %span 月/
        %select.input-default#exp_year{name: "exp_year", type: "text"}
          %option{value: ""} --
          %option{value: "2019"}19
          %option{value: "2020"}20
          %option{value: "2021"}21
          %option{value: "2022"}22
          %option{value: "2023"}23
          %option{value: "2024"}24
          %option{value: "2025"}25
          %option{value: "2026"}26
          %option{value: "2027"}27
          %option{value: "2028"}28
          %option{value: "2029"}29
        %span 年
      #exp_date_error
    .address__main
      %label.address__main__label セキュリティコード
      %span.address__main__require 必須
      = text_field_tag "cvc", "", class: "address__main__input", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
      #card_token
      = submit_tag "追加する", class: "contents__sub__btn", id: "token_submit"

